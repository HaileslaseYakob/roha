<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_job_survey_inherit" model="ir.ui.view">
        <field name="name">hr.job.form.inherit</field>
        <field name="model">hr.job</field>
        <field name="inherit_id" ref="hr_recruitment.hr_job_survey"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="before">
                <label for="appraisal_survey_id" groups="survey.group_survey_user"/>
                <div groups="survey.group_survey_user" class="o_row">
                    <field name="appraisal_survey_id"
                        context="{'default_category': 'hr_recruitment', 'default_access_mode': 'token'}"/>
                    <button string="Display appraisal Form" name="action_print_survey" type="object" attrs="{'invisible':[('appraisal_survey_id','=',False)]}" class="oe_link"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
